<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchCharacterActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFD700"
            android:title="Search Character"
            android:titleTextColor="#000000"/>

        <!-- Search Form -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Character Name"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etCharacterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Goku, Vegeta"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>

        <!-- Radio Group for Race -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Race"
            android:textSize="16sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/rgRace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <RadioButton
                android:id="@+id/rbAllRace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Races"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbSaiyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saiyan"/>

            <RadioButton
                android:id="@+id/rbHuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Human"/>

            <RadioButton
                android:id="@+id/rbNamekian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Namekian"/>
        </RadioGroup>

        <!-- Search Button -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEARCH"
            android:layout_marginTop="32dp"
            android:background="#FFD700"
            android:textColor="#000000"
            android:padding="16dp"/>

    </LinearLayout>
</ScrollView>