<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanetDetailActivity"
    android:background="#E8F5E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          android:layout_width="match_parent"
          android:layout_height="?attr/actionBarSize"
          android:background="#E76A24"
          android:title="Planet Detail"
          app:titleTextColor="@color/white"/>

      <!-- Planet Image -->
      <ImageView
          android:id="@+id/ivPlanetDetail"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:layout_gravity="center"
          android:layout_marginTop="16dp"
          android:scaleType="fitCenter"/>

      <!-- Planet Info Card -->
      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          app:cardCornerRadius="12dp"
          app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

          <!-- Planet Name -->
          <TextView
              android:id="@+id/tvPlanetName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Planet Name"
              android:textSize="28sp"
              android:textStyle="bold"
              android:textColor="#000000"/>

          <!-- Status Badge -->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tvPlanetStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Status"
                android:textSize="16sp"
                android:padding="8dp"
                android:textColor="@color/black"/>
          </LinearLayout>

          <!-- Description -->
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="24dp"
              android:text="Description"
              android:textSize="18sp"
              android:textStyle="bold"
              android:textColor="#000000"/>

          <TextView
              android:id="@+id/tvPlanetDescription"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Planet description goes here..."
              android:textSize="14sp"
              android:lineSpacingExtra="4dp"
              android:textColor="#333333"/>

        </LinearLayout>
      </androidx.cardview.widget.CardView>
    </LinearLayout>
  </ScrollView>